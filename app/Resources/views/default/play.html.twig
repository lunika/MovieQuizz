{% extends 'base.html.twig' %}

{% block navbar %}
    {% set active = "play" %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <p class="text-center">Current score : {{ score }}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <img src="{{ movie.picture }}" class="img-responsive" alt="{{ movie.name }}" title="{{ movie.name }}">
        </div>
        <div class="col-xs-6">
            <img src="{{ actor.picture }}" class="img-responsive" alt="{{ actor.name }}" title="{{ actor.name }}">
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 text-center">
            {{ form_start(form) }}
            {{ form_widget(form.movie) }}
            {{ form_widget(form.actor) }}

            {{ form_widget(form.yes, {'attr': {'class': 'btn btn-default btn-lg'}}) }}
            {{ form_widget(form.no, {'attr': {'class': 'btn btn-default btn-lg'}}) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
